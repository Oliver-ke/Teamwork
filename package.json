{
	"name": "teamwork",
	"version": "1.0.0",
	"description": "A internal collaboration tool for a company",
	"main": "server.js",
	"scripts": {
		"test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha src/test/index.test --timeout 10000 --require @babel/register --recursive --exit || true",
		"clean": "rm -rf build && mkdir build",
		"build-babel": "babel -d ./build ./src -s",
		"build": "npm run clean && npm run build-babel",
		"coverage": "nyc report --reporter=text-lcov --reporter=lcov",
		"start": "npm run build && node ./build/server.js",
		"start:dev": "cross-env NODE_ENV=development nodemon --exec babel-node ./src/server.js",
		"lint": "node_modules/.bin/eslint --fix src/**/*.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Oliver-ke/Teamwork.git"
	},
	"keywords": [
		"application",
		"gif",
		"andela"
	],
	"author": "AZORJI KELECHI OLIVER",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/Oliver-ke/Teamwork/issues"
	},
	"homepage": "https://github.com/Oliver-ke/Teamwork#readme",
	"dependencies": {
		"bcrypt": "^3.0.6",
		"cloudinary": "^1.16.0",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-fileupload": "^1.1.9",
		"express-validator": "^6.2.0",
		"jsonwebtoken": "^8.5.1",
		"pg": "^7.12.1",
		"swagger-ui-express": "^4.1.2",
		"uuid": "^3.3.3"
	},
	"devDependencies": {
		"@babel/cli": "^7.6.4",
		"@babel/core": "^7.6.4",
		"@babel/node": "^7.6.3",
		"@babel/preset-env": "^7.6.3",
		"@babel/register": "^7.6.2",
		"chai": "^4.2.0",
		"chai-http": "^4.3.0",
		"coveralls": "^3.0.7",
		"cross-env": "^6.0.3",
		"eslint": "^6.6.0",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-plugin-import": "^2.18.2",
		"faker": "^4.1.0",
		"mocha": "^6.2.2",
		"mocha-lcov-reporter": "^1.3.0",
		"nodemon": "^1.19.4",
		"nyc": "^14.1.1",
		"sinon": "^7.5.0",
		"sinon-chai": "^3.3.0"
	},
	"nyc": {
		"_comment": "Purpose of this part: to do code coverage within Mocha/Chai using NYC",
		"register": "babel-register",
		"include": [
			"**/*.js",
			"./*.js"
		],
		"exclude": [
			"**/node_modules/**",
			"**/coverage/**",
			"**/.nyc_output/**",
			"**/src/utils/emailTemplates/**",
			"**src/database/migrations/**",
			"**src/database/**",
			"**/docs/**",
			"**src/test/**"
		]
	}
}
